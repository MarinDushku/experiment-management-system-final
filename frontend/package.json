{
    "name": "experiment-management-system-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "axios": "^1.4.0",
        "react": "^18.2.0",
        "react-beautiful-dnd": "^13.1.1",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.14.2",
        "react-scripts": "5.0.1",
        "research-experiment-management-system": "file:..",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@testing-library/react-hooks": "^8.0.1",
        "cypress": "^13.3.0",
        "history": "^5.3.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "msw": "^1.3.2",
        "start-server-and-test": "^2.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test:watch": "react-scripts test --watchAll",
        "test:coverage": "react-scripts test --coverage --watchAll=false",
        "test:ci": "CI=true react-scripts test --coverage --watchAll=false --reporters=default --reporters=jest-junit",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run",
        "test:e2e": "start-server-and-test start http://localhost:3000 cypress:run",
        "test:e2e:dev": "start-server-and-test start http://localhost:3000 cypress:open",
        "test:all": "npm run test:coverage && npm run test:e2e",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/index.js",
            "!src/reportWebVitals.js",
            "!src/**/*.test.{js,jsx}",
            "!src/setupTests.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 10,
                "functions": 10,
                "lines": 10,
                "statements": 10
            }
        },
        "coverageReporters": ["text", "lcov", "html"],
        "transformIgnorePatterns": [
            "node_modules/(?!(axios|msw)/)"
        ]
    },
    "proxy": "http://localhost:5000"
}
